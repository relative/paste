    "fastify-static": "^4.5.0",
    "mime-types": "^2.1.35",
    "monaco-editor": "^0.33.0",
    "ms": "^2.1.3",
    "nanoid": "^3.3.1",
    "pg": "^8.7.3",
    "pg-native": "^3.0.0",
    "point-of-view": "^5.1.0",
    "sanitize.css": "^13.0.0"
