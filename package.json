  },
  "homepage": "https://github.com/relative/paste#readme",
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@types/ejs": "^3.1.0",
    "@types/mime-types": "^2.1.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.21",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.26",
    "esbuild-sass-plugin": "^2.2.4",
    "postcss": "^8.4.8",
    "rimraf": "^3.0.2",
